{
  "manifest_version": 3,
  "name": "Carbon Visualizer",
  "version": "1.0.0",
  "description": "Assess web page carbon emissions using Lighthouse and CO2.js APIs",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://api.thegreenwebfoundation.org/*"
  ],
  "action": {
    "default_title": "Carbon Visualizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/**/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}